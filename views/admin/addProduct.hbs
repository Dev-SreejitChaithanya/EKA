<div class="signup-form">
 <form action="" method="post" enctype="multipart/form-data">
  <div class="mb-3 row">

    <label for="staticEmail" class="col-sm-2 col-form-label">Image</label>
    <div class="col-sm-10">
      <input type="file" required  class="form-control" name="image">
    </div>
  </div>

     <div class="mb-3 row">
    <label for="staticEmail" class="col-sm-2 col-form-label">Name</label>
    <div class="col-sm-10">
      <input type="text" required  class="form-control" name="name">
    </div>
  </div>


  <div class="mb-3 row">
    <label for="staticEmail" class="col-sm-2 col-form-label">Description</label>
    <div class="col-sm-10">
      <input type="text" required  class="form-control" name="description">
    </div>
  </div>

  <div class="mb-3 row">
    <label class="col-sm-2 col-form-label">Category</label>
    <div class="col-sm-10">
   <select type="text" class="form-select" aria-label="Default select example" name="category">
  
  {{#each categorys }}

<option>{{name}}</option>

  {{/each}}



</select>
</div>
  </div>

  <div class="mb-3 row">
    <label class="col-sm-2 col-form-label">Price</label>
    <div class="col-sm-10">
      <input type="number"  class="form-control" min="1"   name="price" required="">
    </div>
  </div>

      <div class="mb-3 row">
    <label class="col-sm-2 col-form-label">Stock</label>
    <div class="col-sm-10">
      <input type="number" class="form-control" min="1"   name="stock" required="">
    </div>
  </div>


  
  <div class="row sign-btn2">
     <div class="col-sm-10">
            <button type="submit" class="btn btn-dark searchB">Update</button>
    <a class="btn btn-dark" href="/admin/products" role="button">Cancel</a>

    </div>
  </div>
  </form>
