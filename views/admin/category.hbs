      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
      <h2>Categories</h2>
        <div class="btn-toolbar mb-2 mb-md-0">
          <div class="btn-group me-2">
            <a href="/admin/addCategory" class="btn btn-sm btn-outline-dark">Add New Category</a>
          </div>

        </div>
      </div>

     

      
      <div class="table-responsive">
<table class="table table-hover"  id="list_products">
  <thead>
    <tr>
        <th scope="col">Image</th>
        <th scope="col">Name</th>
        <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
 {{#each categorys}}
        
         <tr>
         <td><img src="/productImages/{{this.image}}" width="80px" height="80px"></td> 
            <td>{{this.name}}</td>

            <td>
                                        {{#unless this.deletedOn}}
                    <a href="/admin/deleteCategory?id={{this._id}}" class="btn btn-dark">Delete</a>
                    {{else}}
                    <a href="/admin/undeleteCategory?id={{this._id}}" class="btn btn-dark">Add</a>
                    {{/unless}}
            </td>
         </tr>
        {{/each}}
  </tbody>
</table>
      </div>
