
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4"><div class="chartjs-size-monitor"><div class="chartjs-size-monitor-expand"><div class=""></div></div><div class="chartjs-size-monitor-shrink"><div class=""></div></div></div>
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
      <h2>EDIT PRODUCT</h2>
      </div>
      
<div class="signup-form">
 <form action="" method="post" enctype="multipart/form-data">
 
  <div class="mb-3 row">
    <label for="staticEmail" class="col-sm-2 col-form-label">Preview</label>

    <div class="col-sm-10">
     <div>{{#each products.image}}<img src="/productImages/{{this}}" width="80px" height="80px" class="m-1">{{/each}}</div>
    </div>
    
  </div>


  <div class="mb-3 row">
    <label for="staticEmail" class="col-sm-2 col-form-label">Image</label>
    <div class="col-sm-10">
      <input type="file"  class="form-control" name="image">
    </div>
  </div>

     <div class="mb-3 row">
    <label for="staticEmail" class="col-sm-2 col-form-label">Name</label>
    <div class="col-sm-10">
      <input type="text" required  class="form-control" value="{{products.name}}" name="name">
    </div>
  </div>


  <div class="mb-3 row">
    <label for="staticEmail" class="col-sm-2 col-form-label">Description</label>
    <div class="col-sm-10">
      <input type="text" required  class="form-control" value="{{products.description}}"name="description">
    </div>
  </div>

  <div class="mb-3 row">
    <label class="col-sm-2 col-form-label">Category</label>
    <div class="col-sm-10">
   <select type="text" class="form-select" aria-label="Default select example" value="{{products.category}}" name="category" >
  <option selected>{{products.category}}</option>
  {{#each categorys}}
  <option>{{name}}</option>
  {{/each}}

</select>
</div>
  </div>

  <div class="mb-3 row">
    <label class="col-sm-2 col-form-label">Price</label>
    <div class="col-sm-10">
      <input type="number"   class="form-control" min="0"  value="{{products.price}}" name="price" required="">
    </div>
  </div>

      <div class="mb-3 row">
    <label class="col-sm-2 col-form-label">Stock</label>
    <div class="col-sm-10">
      <input type="number" required=""  class="form-control" min="0"  value="{{products.stock}}" name="stock" required="">
    </div>
  </div>

<div>
    <input type="hidden" name="id" value="{{products._id}}"
  </div>

  <div class="row sign-btn2">
     <div class="col-sm-10">
    <button type="submit" class="btn btn-dark searchB">Update</button>
    <a class="btn btn-dark" href="/admin/products" role="button">Cancel</a>
    </div>
         <div class="col-sm-10"> 
    </div>
  </div>

  </form>
  </div>
