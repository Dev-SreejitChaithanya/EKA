

    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4"><div class="chartjs-size-monitor"><div class="chartjs-size-monitor-expand"><div class=""></div></div><div class="chartjs-size-monitor-shrink"><div class=""></div></div></div>
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
      <h2>Products</h2>
        <div class="btn-toolbar mb-2 mb-md-0">
          <div class="btn-group me-2">
            <a href="/admin/addProduct" class="btn btn-sm btn-outline-dark ">Add New product</a>
          </div>

        </div>
      </div>

     

      
      <div class="table-responsive">
<table class="table table-hover"  id="list_products">
  <thead>
    <tr>
        <th scope="col">Image</th>
        <th scope="col">Name</th>
        <th scope="col" style="word-wrap:break-word; width:600px">Description</th>
        <th scope="col">Category</th>
        <th scope="col">Price</th>
        <th scope="col">Stock</th>
        <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
 {{#each products}}
        
         <tr >
          
            <td>
              {{#each this.image}}
              <img src="/productImages/{{this}}" width="80px" height="80px">
              {{/each}}
              </td>
            <td>{{this.name}}</td>
            <td style="word-wrap:break-word">{{this.description}}</td>
            <td>{{this.category}}</td>
            <td>₹{{this.price}}</td>
            <td>{{this.stock}}</td>
            <td>
                    
                    <a href="/admin/editProduct?id={{this._id}}" class="btn btn-light">Edit</a>
                    {{#unless this.deletedOn}}
                    <a href="/admin/deleteProduct?id={{this._id}}" class="btn btn-dark">Delete</a>
                    {{else}}
                    <a href="/admin/undeleteProduct?id={{this._id}}" class="btn btn-dark">Add</a>
                    {{/unless}}
            </td>
         </tr>
        {{/each}}
  </tbody>
</table>
      </div>
    </main>
