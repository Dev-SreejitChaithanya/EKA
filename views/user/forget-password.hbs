<div class="SIGn">
  <main class="form-signin">
    <form action="" method="post">
      <img
        class="mb-4 rounded img-fluid shadow-sm mx-auto d-block"
        src="/assets/logo.png"
        alt="EKA logo"
        width="100"
        height="100"
      />

      <div class="form-floating">
        <div class="d-flex justify-content-between">
          <h6 class="st">PASSWORD</h6>
        </div>

        <input
          type="password"
          class="form-control shadow-sm"
          name="password"
          id="floatingPassword"
          placeholder="Password"
        />
        <br />
        {{! <label for="floatingPassword">Password</label> }}
        <button class="btn btn-sm btn-light shadow-sm st" type="submit">Reset PAssword</button>
        <br /><br />
      </div>

      <div>
        <input type="hidden" name="user_id" value="{{user_id}}">
      </div>
    </form>
  </main>
</div>