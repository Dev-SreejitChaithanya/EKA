<div class="SIGn">
  <main class="form-signin">
    <form action="" method="post">
      <a href="/"><img
        class="mb-4 rounded img-fluid shadow-sm mx-auto d-block"
        src="/assets/logo.png"
        alt="EKA logo"
        width="100"
        height="100"
        
      /></a>
      <div class="form-floating">
        <h6 class="st">EMAIL</h6>
        <input
          type="email"
          class="form-control shadow-sm"
          name="email"
          id="floatingInput"
          placeholder="name@example.com"
        />
        {{! <label for="floatingInput">Email address</label> }}
        <br />
      </div>
      <div class="form-floating">
        <div class="d-flex justify-content-between">
          <h6 class="st">PASSWORD</h6>
          <a href="/forgot" class="st">Forgot Password></a>

        </div>

        <input
          type="password"
          class="form-control shadow-sm"
          name="password"
          id="floatingPassword"
          placeholder="Password"
        />
        <br />
        {{! <label for="floatingPassword">Password</label> }}
        <button class="btn btn-sm btn-light shadow-sm st" type="submit">Sign in</button>
        <br /><br />  
      </div>

      {{! <div class="checkbox mb-3">
      <label>
        <input type="checkbox" value="remember-me"> Remember me
      </label>
    </div> }}

      <h6 class="st">New here ??</h6>
      <a
        class="btn btn-sm btn-light shadow-sm st"
        href="/register"
        role="button"
      >Sign Up</a>




      {{#if message}}
        <p style="color:green">{{message}}</p>
      {{/if}}

    </form>
  </main>
</div>